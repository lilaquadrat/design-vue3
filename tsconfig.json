{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": [
    "env.d.ts", 
    "src/**/*", 
    "src/**/*.vue", 
    "src/components/modules/*.vue", 
    "src/components/partials/*.vue", 
    "projects/**/*", 
    "projects/**/*.vue", 
    "projects/company/project/src/modules/*.vue",
    "components.d.ts"
  ],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@modules/*": ["./src/components/modules/*"],
      "@partials/*": ["./src/components/partials/*"],
      "@interfaces/*":["./src/interfaces/*"]
    }
  }
}
